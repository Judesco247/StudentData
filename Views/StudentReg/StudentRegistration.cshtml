@*<script src="~/js/scripts.js"></script>*@
<script>
    $(document).ready(function () {
        var StateName = $("#State");
        var LocalGovtName = $("#LGovt");
        LocalGovtName.prop('disabled', true);

        StateName.change(function () {
            if ($(this).val() == "0") {
                LocalGovtName.prop('disabled', true);
                LocalGovtName.val("0");
            }
            else {
                $.ajax({
                    url: "/api/eachgetLGA/1",
                    method: "get",
                    success: function () {
                        LocalGovtName.prop('disabled', false);
                        console.log("Success:")
                    }
                })
            }
        });
    });

