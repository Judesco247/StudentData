<body>
    @*<h3>Student Registration</h3> <br />*@
    <div class="pagetitle">
      <h1>Student Registration</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">New Student</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

<div class="container">
    <div class="col-md-12">
        <form asp-action="StudentReg" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label"><b>Registration Number</b></label>
                    <input asp-for="RegNumber" class="form-control" />
                    <span asp-validation-for="RegNumber" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="control-label"><b>Surname</b></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="control-label"><b>Othernames</b></label>
                    <input asp-for="OtherNames" class="form-control" />
                    <span asp-validation-for="OtherNames" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-6">
                    <label class="control-label"><b>Adress</b></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="control-label"><b>State of Origin</b></label>
                    <select asp-for="States" class="form-control" id="State"></select>
                </div>
                <div class="col-md-3">
                    <label class="control-label"><b>LGA</b></label>
                    <select asp-for="LocalGovt" class="form-control" id="LGovt"></select>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-3">
                    <label class="control-label"><b>Date of Birth</b></label>
                    <input asp-for="DateOfBirth" class="form-control" id="datepicker1" type="date" placeholder="dd-mm-yyyy" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="control-label"><b>Phone Number (I)</b></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="control-label"><b>Phone Number (II)</b></label>
                    <input asp-for="Alt_PhoneNumber" class="form-control" />
                    <span asp-validation-for="Alt_PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="control-label"><b>Admission Date</b></label>
                    <input asp-for="DateOfAdmission" class="form-control" id="datepicker2" type="date" />
                    <span asp-validation-for="DateOfAdmission" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-3">
                    <label class="control-label"><b>Course Of Study</b></label>
                    <select asp-for="Course" class="form-control">
                        <option>Select ...</option>
                        <option value="Computer">Computer Science</option>
                        <option value="Business">Business Administrator</option>
                        <option value="Mechanic">Mechanical Engineer</option>
                    </select>
                    <span asp-validation-for="Course" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label"><b>Department</b></label>
                    <select asp-for="Department" class="form-control">
                        <option>Select ...</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label"><b>Program</b></label>
                    <select asp-for="Program" class="form-control">
                        <option>Select ...</option>
                        <option value="Part-time">Part-Time</option>
                        <option value="Full-time">Full-Time</option>
                        <option value="PGD">Post Graduate</option>
                        <option value="Masters">Masters Degree</option>
                    </select>
                    <span asp-validation-for="Program" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label"><b>Religion</b></label>
                    <select asp-for="Religion" class="form-control">
                        <option>Select ...</option>
                        <option value="Christian">Christian</option>
                        <option value="Muslim">Muslim</option>
                        <option value="others">Others</option>
                    </select>
                    <span asp-validation-for="Religion" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-3">
                    <label class="control-label"><b>Passport Photograph</b></label> <br />
                    <input type="file" name="passport" />
                </div>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
            </div>

            <br />

            <div class="row">
                <div class="col-md-1">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                
                <div class="col-md-1">
                    <input type="submit" value="Clear" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>


